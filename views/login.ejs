<!-- 
  File: login.ejs
  Description: This is the login page rendered using EJS.
  It includes Bootstrap for styling, a dark mode theme, and dynamically renders error messages.
-->
<html>
<head>
  <!-- Include Bootstrap CSS for responsive design -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Custom dark mode styling for inputs, buttons, and background -->
  <style>
    body {
      background-color: #1a1a1a;
      color: #ffffff;
    }
    .navbar { margin-bottom: 2rem; }
    .card { border: none; }
    .form-control {
      background-color: #2c2c2c;
      color: #fff;
      border: 1px solid #555;
    }
    .form-control:focus {
      border-color: #007bff;
      box-shadow: 0 0 0 0.2rem rgba(0,123,255,.25);
    }
    .btn-primary {
      background-color: #007bff;
      border-color: #007bff;
    }
    .btn-primary:hover {
      background-color: #0069d9;
      border-color: #0062cc;
    }
    .error-message {
      color: red;
      font-size: 0.9rem;
      margin-top: 0.5rem;
    }
  </style>
</head>
<body class="bg-dark text-light">

  <!-- Bootstrap dark-themed navigation bar -->
  <nav class="navbar navbar-dark bg-dark">
    <div class="container-fluid">
      <!-- Application branding/logo as a link -->
      <a class="navbar-brand" href="#">Fraunhofer</a>
    </div>
  </nav>


  <!-- Main container centering the login card -->
  <div class="d-flex align-items-center justify-content-center" style="min-height: 80vh;">
    <div class="card bg-secondary text-light shadow p-4" style="width: 22rem;">
      <h3 class="text-center mb-4">Welcome</h3>
      <!-- Login form that posts to /login route -->
      <form action="/login" method="POST">
        <!-- Username field -->
        <div class="mb-3">
          <label class="form-label">Email Address</label>
          <input type="text" name="username" class="form-control" required>
        </div>
        <!-- Password field with dynamic error message -->
        <div class="mb-3">
          <label class="form-label">Password</label>
          <input type="password" name="password" class="form-control" required>
          <% if (typeof error !== 'undefined' && error) { %>
            <div class="error-message"><%= error %></div>
          <% } %>
        </div>
        <!-- Submit button to log in -->
        <button type="submit" class="btn btn-primary w-100">Login</button>
      </form>
      <!-- Link to registration page for new users -->
      <div class="text-center mt-3">
        <a href="/register" class="text-light">Don't have an account? <strong>SignUp</strong></a>
      </div>
    </div>
  </div>

  <!-- Include Bootstrap JavaScript bundle -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>