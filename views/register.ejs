<!--
  register.ejs
  
  This EJS view file renders the registration page for new users.
  It includes a styled form using Bootstrap for creating a new account.
  The username is auto-generated as "firstname.lastname" in lowercase.
-->
<!DOCTYPE html>
<html>
<head>
  <title>Register</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      background-color: #1d1f20;
      color: white;
    }
    .container {
      background-color: #5f676b;
      border-radius: 8px;
      padding: 2rem;
      margin-top: 100px;
      text-align: center;
    }
    a {
      color: #f8f9fa;
      text-decoration: underline;
    }
    a:hover {
      color: #b0c4de;
    }
  </style>
</head>
<body>
  <!-- Include the reusable header component -->
  <%- include('header') %>

  <!-- Main container for the registration form -->
  <div class="container">
    <h1>Create an Account</h1>
    <p>Please fill out the form below to register.</p>
    <form action="/register" method="POST" oninput="username.value = (firstName.value + '.' + lastName.value).toLowerCase()">
      <!-- Input for user's first name -->
      <div class="mb-3">
        <label for="firstName" class="form-label">First Name</label>
        <input type="text" id="firstName" name="firstName" class="form-control" required>
      </div>
      <!-- Input for user's last name -->
      <div class="mb-3">
        <label for="lastName" class="form-label">Last Name</label>
        <input type="text" id="lastName" name="lastName" class="form-control" required>
      </div>
      <!-- Auto-generated username (readonly) based on first and last name -->
      <div class="mb-3">
        <label for="username" class="form-label">Username</label>
        <input type="text" id="username" name="username" class="form-control" readonly required>
      </div>
      <!-- Input for user's password -->
      <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <input type="password" id="password" name="password" class="form-control" required>
      </div>
      <!-- Submit button to register -->
      <button type="submit" class="btn btn-primary">Register</button>
    </form>
    <!-- Link to the login page if user already has an account -->
    <div class="mt-3">
      <a href="/login">Already have an account? <strong>Login</strong></a>
    </div>
  </div>
</body>
</html>